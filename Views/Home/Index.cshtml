@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="text-center">
    <h1 class="display-4">Todo Uygulamasına Hoş Geldiniz</h1>
    <p class="lead">Görevlerinizi organize edin ve takip edin.</p>
    
    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-tasks fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Görev Yönetimi</h5>
                    <p class="card-text">Görevlerinizi oluşturun, düzenleyin ve takip edin.</p>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Todo" asp-action="Index" class="btn btn-primary">Görevleri Görüntüle</a>
                    }
                    else
                    {
                        <a asp-controller="User" asp-action="Login" class="btn btn-primary">Giriş Yap</a>
                    }
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-user-plus fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Hesap Oluştur</h5>
                    <p class="card-text">Yeni hesap oluşturarak görevlerinizi kişiselleştirin.</p>
                    <a asp-controller="User" asp-action="Register" class="btn btn-success">Kayıt Ol</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-sign-in-alt fa-3x text-info mb-3"></i>
                    <h5 class="card-title">Giriş Yap</h5>
                    <p class="card-text">Mevcut hesabınızla giriş yapın.</p>
                    <a asp-controller="User" asp-action="Login" class="btn btn-info">Giriş Yap</a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mt-5">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-info-circle me-2"></i>Özellikler</h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li><i class="fas fa-check text-success me-2"></i>Görev oluşturma ve düzenleme</li>
                        <li><i class="fas fa-check text-success me-2"></i>Öncelik seviyeleri (1-3)</li>
                        <li><i class="fas fa-check text-success me-2"></i>Görev durumu takibi</li>
                        <li><i class="fas fa-check text-success me-2"></i>Kullanıcı bazlı görev yönetimi</li>
                        <li><i class="fas fa-check text-success me-2"></i>Güvenli kimlik doğrulama</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>


