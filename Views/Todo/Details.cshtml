@model TodoResponseDto
@{
    ViewData["Title"] = "Görev Detayları";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h3><i class="fas fa-eye me-2"></i>Görev Detayları</h3>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-sm">
                            <i class="fas fa-edit me-1"></i>Düzenle
                        </a>
                        <a asp-action="Index" class="btn btn-secondary btn-sm">
                            <i class="fas fa-arrow-left me-1"></i>Geri Dön
                        </a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Başlık:</strong>
                        <p class="mb-0 @(Model.IsCompleted ? "text-decoration-line-through text-muted" : "")">
                            @Model.Title
                        </p>
                    </div>
                    <div class="col-md-6">
                        <strong>Durum:</strong>
                        <div class="mb-0">
                            @if (Model.IsCompleted)
                            {
                                <span class="badge bg-success">
                                    <i class="fas fa-check me-1"></i>Tamamlandı
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">
                                    <i class="fas fa-clock me-1"></i>Bekliyor
                                </span>
                            }
                        </div>
                    </div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Öncelik:</strong>
                        <div class="mb-0">
                            <span class="badge bg-@(Model.Priority switch { 1 => "success", 2 => "warning", 3 => "danger", _ => "secondary" })">
                                Öncelik @Model.Priority
                            </span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <strong>Kullanıcı:</strong>
                        <p class="mb-0">@Model.Username</p>
                    </div>
                </div>
                
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="mb-3">
                        <strong>Açıklama:</strong>
                        <p class="mb-0 @(Model.IsCompleted ? "text-muted" : "")">@Model.Description</p>
                    </div>
                }
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Oluşturulma Tarihi:</strong>
                        <p class="mb-0">@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</p>
                    </div>
                    @if (Model.CompletedAt.HasValue)
                    {
                        <div class="col-md-6">
                            <strong>Tamamlanma Tarihi:</strong>
                            <p class="mb-0">@Model.CompletedAt.Value.ToString("dd.MM.yyyy HH:mm")</p>
                        </div>
                    }
                </div>
                
                <div class="mb-3">
                    <strong>Durum:</strong>
                    <p class="mb-0">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Aktif</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Pasif</span>
                        }
                    </p>
                </div>
            </div>
            
            <div class="card-footer">
                <div class="d-flex justify-content-between">
                    <div>
                        @if (!Model.IsCompleted)
                        {
                            <form asp-action="Complete" asp-route-id="@Model.Id" method="post" style="display: inline;">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-success" 
                                        onclick="return confirm('Bu görevi tamamlandı olarak işaretlemek istediğinizden emin misiniz?')">
                                    <i class="fas fa-check me-1"></i>Tamamlandı Olarak İşaretle
                                </button>
                            </form>
                        }
                    </div>
                    
                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display: inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger" 
                                onclick="return confirm('Bu görevi silmek istediğinizden emin misiniz?')">
                            <i class="fas fa-trash me-1"></i>Görevi Sil
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
